@model OnlineGallery.ViewModels.ImageViewModels.ImageEditViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>EditImageViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="File" class="control-label"></label>
                <input asp-for="File" class="form-control" />
                <span asp-validation-for="File" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Url" class="control-label"></label>
                <img src="@("/uploads/" + Model.Url)" />
                <span asp-validation-for="Url" class="text-danger"></span>
            </div>
            <div>
                <div class="form-group">
                    <label asp-for="AlbumId" class="control-label"></label>
                    <select asp-for="AlbumId" class="form-control" asp-items="@(new SelectList(ViewBag.Album, "Id", "Title",Model.AlbumId))"></select>
                    <span asp-validation-for="AlbumId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}